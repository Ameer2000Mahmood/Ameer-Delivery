
<div class="container">
        <div class="row">
            <div class="col-md-3">

            </div>
             <div class="col-md-6 main">
            <div class="alert alert-danger" role="alert", id="errmessage", style="display: none">
                    {{#if title}}
                    <script type="text/javascript">
                        document.getElementById("errmessage").style.display = "block";
                    </script>
                    <p>{{title}}</p>
                    {{/if}}
                </div>

                <form action="/Thanks" method="POST">
                    <h1 id="h1">Checkout</h1>
                    <h2 id="h2">Total: {{total}}$</h2>
                    <br>
                    <input type="text" class="box" id="name" name="name" placeholder="Name" required />
                   {{!-- <div id='result'></div> --}}
                    <br>
                     <input type="text" class="box" id="adress" name="adress" placeholder="Adress" required />
                     <br>
                     <input type="text" class="box" id="phone" name="phone" placeholder="Phone" required />
                     <br>
                     <input type="text" class="box" id="postal" name="postal" placeholder="Postal code" required />
                     <br>
                     <label for="form-check"> If you want an express shipping: </label>
                      <div class="form-check" >
                      <input class="form-check-input" name="chbox" type="checkbox" value="true" id="flexCheckDefault4" >
                      <label class="form-check-label" for="flexCheckDefault">
                      Express 1-2 days (30$) <i class="fa fa-truck" aria-hidden="true"></i>
                      </label>
                      </div>
                     {{!-- <br> --}}
                    <input  type="submit" class="btn btn-success" value="Purchase" id="submit" />
                    {{!-- <a href="/Thanks" type="button" id="prchfin" class="btn btn-success"><i class="	fa fa-check-square-o" aria-hidden="true"> Purchase</i></a></div> --}}
                </form>
            </div>
            <div class="col-md-3">
            </div>
        </div>
    </div>


